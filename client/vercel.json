// 路径：/client/vercel.json
{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build", // 对于Vite/React/Next.js等
      "config": { "distDir": "dist" } // 与你的前端构建输出目录一致
    }
  ],
  "routes": [
    // 将所有 /api 开头的请求，转发到你部署的后端域名
    {
      "src": "/api/(.*)",
      "dest": "https://你的后端项目域名.vercel.app/api/$1"
    },
    // 其他所有请求返回前端页面
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}