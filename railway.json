{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "buildArgs": {
      "NODE_ENV": "production"
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node dist/server/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}